{
  "Environment": "Development",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "ConnectionStrings": {
    "AppDB": "Server=sqlserver;Database=GitPub;User Id=sa;Password=VeryStrongPassword12345!;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "ExporterSettings": {
    "Directory": "C:\\Exporters"
  }
}
